{% extends "base.j2" %}
{% block content %}
<div class="main">
<h1>Drivers</h1>
    <div class="container data_table">
        <table class="table">
            <thead>
                <tr>
                    <th>id</th>
                    <th>first name</th>
                    <th>last name</th>
                    <th>email</th>
                    <th>phone</th>
                    <th>street</th>
                    <th>city</th>
                    <th>state</th>
                    <th>zip code</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for driver in Drivers %}
                <tr>
                {% for key in driver.keys() %}
                    <td>{{driver[key]}}</td>
                {% endfor %}
                    <td><a href="Drivers/../update/{{driver['driver_id']}}">Edit</a></td>
                    <td><a href="Drivers/../delete/{{driver['driver_id']}}" onclick="return confirm('Delete {{driver['first_name']}} {{driver['last_name']}} from your records? This action is irreversible.')">Delete</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="container data_forms">
        <div class="form_div">
            <form class="form" method="POST" action="/Drivers" id="searchDriver">
                <legend>Search Drivers by Last Name</legend>
                <label for="cars">(partial search allowed)</label>
                <fieldset class="form__field">
                    <div class="field__item">
                        <label> Last Name </label>
                        <input type="text" class="field__input" name="last_name" placeholder="Jackson">
                    </div>
                    <div class="multiple_buttons">
                        <input type="submit" value="Search" name="search_driver" class="field__button">
                        <input type="submit" value="Reset" name="reset_search" class="field__button">
                    </div>
                </fieldset>
            </form>
        </div>
        <div class="form_div">
            <form class="form" method="POST" action="/Drivers" id="addDriver">
                <legend>Add New Driver</legend>
                <fieldset class="form__field">
                    <div class="field__item">
                        <label> First Name* </label>
                        <input type="text" class="field__input" name="first_name" placeholder="John" required>
                    </div>
                    <div class="field__item">
                        <label> Last Name* </label>
                        <input type="text" class="field__input" name="last_name" placeholder="Doe" required>
                    </div>
                    <div class="field__item">
                        <label> Email* </label>
                        <input type="email" class="field__input" name="email" placeholder="jdoe@email.com" required>
                    </div>
                    <div class="field__item">
                        <label> Phone* </label>
                        <input type="text" class="field__input" name="phone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="555-555-5555" required>
                    </div>
                    <div class="field__item">
                        <label> Street* </label>
                        <input type="text" class="field__input" name="street" placeholder="1234 Sample St." required>
                    </div>
                    <div class="field__item">
                        <label> City* </label>
                        <input type="text" class="field__input" name="city" placeholder="City Name" required>
                    </div>
                    <div class="field__item">
                        <label> State* </label>
                        <input type="text" class="field__input" name="state" pattern="[A-Z]{2}" placeholder="CA" required>
                    </div>
                    <div class="field__item">
                        <label> Zip Code* </label>
                        <input type="text" class="field__input" name="zipcode" pattern="[0-9]{5}" placeholder="99999" required>
                    </div>
                    <input type="submit" value="Add" name="add_driver" class="field__button">
                </fieldset>
            </form>
        </div>
        
    </div>
 </div>
 <script>

</script>
{% endblock %}
